<?xml version="1.0" encoding="utf-8"?>
<form>
		<fields name="params" addfieldpath="/plugins/system/jat3/jat3/core/element">
			<fieldset name="STANDARD_SETTING" label="Standard Setting">
				<field name="group" type="japaramhelpert3" function="@group">
					<option for="logoType" value="text" hideRow="true">logoText,sloganText</option>
					<option for="setting_menu" value="mega" hideRow="true">ja_menu_mega_animation,ja_menu_mega_duration,ja_menu_mega_delayhide</option>
					<option for="setting_screen" value="fixed" hideRow="true">screen_fixed_width</option>
				</field>
				
				<field name="general_setting" level="2" type="japaramhelpert3" label="GENERAL_SETTING" function="@title" description="GENERAL_SETTING_DESC" />			
				<field name="logoType" type="list" default="image" label="LOGO_TYPE" description="LOGO_TYPE_DESCRIPTION">
					<option value="image">Image</option>
					<option value="text">Text</option>
				</field>
				<field name="logoText" type="text" default="" size="50" label="LOGO_TEXT" description="LOGO_TEXT_DESCRIPTION" />
				<field name="sloganText" type="text" default="" size="50" label="Slogan" description="SLOGAN_DESCRIPTION" />
				<!-- Font setting -->
				<field name="setting_font" type="list" default="3" label="FONT_SIZE" description="FONT_SIZE_DESCRIPTION">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
				</field>
				<!-- Screen setting -->
				<field name="setting_screen" type="list" default="940" label="Template Width" description="TEMPLATE_WIDTH_DESCRIPTION">
					<option value="auto">AUTO</option>
					<option value="wide">WIDE_SCREEN</option>
					<option value="narrow">NARROW_SCREEN</option>
					<option value="fixed">SPECIFIED</option>
				</field>			
				<field name="screen_fixed_width" type="text" default="980px" label="Specified width" description="SPECIFIED_WIDTH_DESCRIPTION" />
				<field name="hide_content_block" type="list" default="0" label="Hide Main content block" description="HIDE_MAIN_CONTENT_BLOCK_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>			
				<!-- Direction setting -->
				<field name="setting_direction" type="list" default="ltr" label="Direction" description="DIRECTION_DESC">
					<option value="ltr">LTR</option>
					<option value="rtl">RTL</option>
				</field>			
				<!-- T3 Logo setting -->
				<field name="setting_t3logo" type="list" default="t3-logo-light" label="T3_LOGO" description="T3_LOGO_DESCRIPTION">
					<option value="t3-logo t3-logo-light">Light logo</option>
					<option value="t3-logo t3-logo-dark">Dark logo</option>
					<option value="t3-logo-sm t3-logo-light-sm">Light logo small</option>
					<option value="t3-logo-sm t3-logo-dark-sm">Dark logo small</option>
					<option value="none">No show</option>
				</field>			
		
				<field name="GOOGLE FONT API SETTING" level="2" type="japaramhelpert3" label="GOOGLE_FONT_API_SETTINGS" function="@title" description="GOOGLE_FONT_API_SETTINGS_DESC" />
				
				<field name="gfont_global" type="gfonts" default="" label="Global" description="GLOBAL_FONT_DESCRIPTION" />
				<field name="gfont_logo" type="gfonts" default="" label="Logo" description="LOGO_FONT_DESCRIPTION" />
				<field name="gfont_slogan" type="gfonts" default="" label="Slogan" description="SLOGAN_FONT_DESCRIPTION" />
				<field name="gfont_mainnav" type="gfonts" default="" label="Main Menu" description="MAIN_MENU_FONT_DESCRIPTION" />
				<field name="gfont_subnav" type="gfonts" default="" label="Sub Menu" description="SUB_MENU_FONT_DESCRIPTION" />
				<field name="gfont_moduletitle" type="gfonts" default="" label="Module Title" description="MODULE_TITLE_FONT_DESCRIPTION" />
				<field name="gfont_pageheading" type="gfonts" default="" label="Page heading" description="PAGE_HEADING_FONT_DESCRIPTION" />
				<field name="gfont_contentheading" type="gfonts" default="" label="Content heading" description="CONTENT_HEADING_FONT_DESCRIPTION" />
				
				<field name="" type="updategfont" default="" label="" description="" />
				
				<field name="menu_setting" level="2" type="japaramhelpert3" label="MENU_SETTING" function="@title" description="MENU_SETTING_DESC" />
				<field name="menutype" type="menu" default="mainmenu" label="MENU_MODULE" description="MENU_MODULE_DESC" />
				<field name="setting_menu" type="list" default="mega" label="MENU_TYPE" description="MENU_TYPE_DESC">
				  <option value="split">Split Menu</option>
				  <option value="css">CSS Menu</option>
				  <option value="dropline">Dropline Menu</option>
				  <option value="mega">Mega Menu</option>
				</field>
				<field name="startlevel" type="text" default="0" label="START_LEVEL" description="START_LEVEL_DESC" />
				<field name="endlevel" type="text" default="-1" label="END_LEVEL" description="END_LEVEL_DESC" />
				<field name="ja_menu_mega_animation" type="list" default="slide" label="ANIMATION_TYPE" description="ANIMATION_TYPE_DESC">
				  <option value="none">None</option>
				  <option value="slide">Slide</option>
				  <option value="fade">Fade</option>
				  <option value="slide_fade">Slide &amp; Fade</option>
				</field>
				<field name="ja_menu_mega_duration" type="text" default="300" label="ANIMATION_DURATION" description="ANIMATION_DURATION_DESC" />
				<field name="ja_menu_mega_delayhide" type="text" default="300" label="DELAY_HIDE_TIME" description="DELAY_HIDE_TIME_DESC" />
				
				<field name="options" level="2" type="japaramhelpert3" label="OPTIONS" function="@title" description="OPTIONS_DESC" />
		
				<field name="option_font" type="radio" default="0" label="Show/Hide Font Tools" description="SHOW_HIDE_FONT_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
				<field name="option_screen" type="radio" default="0" label="Show/Hide Screen Tools" description="SHOW_HIDE_SCREEN_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
				<field name="option_profile" type="radio" default="0" label="Show/Hide Profile Tools" description="SHOW_HIDE_PROFILE_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
				<field name="option_layouts" type="radio" default="0" label="Show/Hide Layouts Tools" description="SHOW_HIDE_LAYOUTS_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
				<field name="option_direction" type="radio" default="0" label="Show/Hide Direction Tools" description="SHOW_HIDE_DIRECTION_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
				<field name="option_menu" type="radio" default="0" label="Show/Hide Menu Tools" description="SHOW_HIDE_MENU_TOOLS_DESC">
					<option value="1">show</option>
					<option value="0">hide</option>
				</field>
		 </fieldset>
		 
		 <fieldset name="Advanced_Setting" label="ADVANCED_SETTING">			
				<field name="theme_setting" level="2" type="japaramhelpert3" label="THEMES_SETTING" function="@title" description="THEMES_SETTING_DESC" />
		
				<field name="themes" type="jathemesettings" cols="50" rows="8" default="" label="THEMES_SETTING" description="THEMES_SETTING_DESC" />
			
				<field name="layout_setting" level="2" type="japaramhelpert3" label="LAYOUT_SETTING" function="@title" description="LAYOUT_SETTING_DESC" />
				
				<field name="desktop_layout" type="jalayoutsettings" default="default" label="DESKTOP_LAYOUT" description="DESKTOP_LAYOUT_SETTING_DESC" />
				<field name="handheld_layout" type="jalayoutsettings" default="handheld" label="Handheld Layout" description="HANDHELD_LAYOUT_DESC" />
				<field name="iphone_layout" type="jalayoutsettings" default="iphone" label="Iphone Layout" description="IPHONE_LAYOUT_DESC" />
				<field name="android_layout" type="jalayoutsettings" default="iphone" label="ANDROID_LAYOUT" description="ANDROID_LAYOUT_DESC" />
          </fieldset>
     </fields>
</form>
